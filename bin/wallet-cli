    // TODO
  });

program
  .command('getTxids <wallet>')
  .description('View transactions for a wallet')
  .option('-f, --from <from>', 'The starting range index')
  .option('-t, --to <to>', 'The ending range index')
  .action(function() {
    // TODO
  });

program.parse(process.argv);

if (process.argv.length === 2) {
  program.help();
}
